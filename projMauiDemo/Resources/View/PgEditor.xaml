<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:crm ="clr-namespace:projMauiDemo.Resources.ViewModels"
             x:Class="projMauiDemo.Resources.View.PgEditor"
             Title="PgEditor">
    <ContentPage.BindingContext>
        <crm:CCustomerViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label 
            Text="客戶資料管理表"
            VerticalOptions="Center" 
            HorizontalOptions="FillAndExpand"
            Background="#005AB5	"
            TextColor="#FFFCEC"
            FontSize="40"
            HorizontalTextAlignment="Center"/>
        <Label
            Text="編號"
            FontSize="30"
            HorizontalOptions="Start"/>
        <Entry
            x:Name="txtID"
            HorizontalOptions="FillAndExpand"
            FontSize="30"
            Text="{Binding current.id,Mode=TwoWay}"/>
        <Label
            Text="姓名"
            FontSize="30"
            HorizontalOptions="Start"/>
        <Entry
            x:Name="txtName"
            HorizontalOptions="FillAndExpand"
            FontSize="30"
            Text="{Binding current.name,Mode=TwoWay}"/><!--繫結位置, (TwoWay是指畫面跟source的值都會改變)-->
        <Label
            Text="電話"
            FontSize="30"
            HorizontalOptions="Start"/>
        <Entry
            x:Name="txtPhone"
            HorizontalOptions="FillAndExpand"
            FontSize="30"
            Text="{Binding current.phone,Mode=TwoWay}"/>
        <Label
            Text="電子郵件"
            FontSize="30"
            HorizontalOptions="Start"/>
        <Entry
            x:Name="txtEmail"
            HorizontalOptions="FillAndExpand"
            FontSize="30"
            Text="{Binding current.email,Mode=TwoWay}"/>
        <Label
            Text="地址"
            FontSize="30"
            HorizontalOptions="Start"/>
        <Entry
            x:Name="txtAddress"
            HorizontalOptions="FillAndExpand"
            FontSize="30"
            Text="{Binding current.address,Mode=TwoWay}"/>
        <StackLayout Orientation="Horizontal">
            <ImageButton
                Source="first"
                HorizontalOptions="FillAndExpand"
                Clicked="btnFisrt_Clicked"/>
            <ImageButton
                Source="previous"
                HorizontalOptions="FillAndExpand"
                Clicked="btnPrevious_Clicked"/>
            <ImageButton
                Source="next"
                HorizontalOptions="FillAndExpand"
                Clicked="btnNext_Clicked"/>
            <ImageButton
                Source="last"
                HorizontalOptions="FillAndExpand"
                Clicked="btnLast_Clicked"/>
            <ImageButton
                Source="search"
                HorizontalOptions="FillAndExpand"
                Clicked="btnSearchClick"/>
            <ImageButton
                Source="menu"
                HorizontalOptions="FillAndExpand"
                Clicked="btnList_Clicked"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>