<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projMauiDemo.Resources.View.PgBindingByXaml"
             Title="PgBindingByXaml">
    <VerticalStackLayout>
        <Label 
            Text="Hello"
            x:Name="lblHello"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="100"/>
        <Slider
            x:Name="slider"
            Minimum="0"
            Maximum="200"
            VerticalOptions="FillAndExpand"
            Value="{Binding Source={x:Reference lblHello},Path=FontSize}"/>


    </VerticalStackLayout>
</ContentPage>